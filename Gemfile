  gem 'shoulda-matchers'
  gem 'faker'
  gem 'factory_girl_rails'
  gem 'simplecov'
  gem 'rubocop'
  gem 'guard'
  gem 'guard-bundler'
  gem 'guard-rubocop'
  gem 'guard-rspec'
  gem 'guard-brakeman'
  gem 'pry-rails'
